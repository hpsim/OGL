{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "description": "Default build using Ninja generator",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "$env{FOAM_USER_LIBBIN}/.."
      }
    },
    {
      "name": "release",
      "hidden": true,
      "inherits": [
        "default"
      ],
      "description": "Default build using Ninja generator",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "$env{FOAM_USER_LIBBIN}/.."
      }
    },
    {
      "name": "debug",
      "hidden": true,
      "inherits": [
        "default"
      ],
      "description": "Default build using Ninja generator",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "OGL_ALLOW_REFERENCE_ONLY": {
          "type": "BOOL",
          "value": "ON"
        },
        "OGL_BUILD_UNITTEST": {
          "type": "BOOL",
          "value": "ON"
        }
      }
    },
    {
      "name": "develop",
      "description": "Default build using Ninja generator",
      "binaryDir": "${sourceDir}/build/develop",
      "inherits": [
        "default"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_INSTALL_PREFIX": "$env{FOAM_USER_LIBBIN}/..",
        "OGL_ALLOW_REFERENCE_ONLY": {
          "type": "BOOL",
          "value": "ON"
        },
        "OGL_BUILD_UNITTEST": {
          "type": "BOOL",
          "value": "ON"
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "release",
      "configurePreset": "release",
      "configuration": "Release"
    },
    {
      "name": "debug",
      "configurePreset": "debug",
      "configuration": "Release"
    },
    {
      "name": "develop",
      "configurePreset": "develop",
      "configuration": "Develop"
    }
  ],
  "workflowPresets": [
    {
      "name": "release",
      "steps": [
        {
          "type": "configure",
          "name": "release"
        },
        {
          "type": "build",
          "name": "release"
        }
      ]
    }
  ]
}
